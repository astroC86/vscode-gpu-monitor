{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2020",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "jsx": "react",
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
            "@shared/*": ["shared/*"]
        }
    },
    "include": [
        "src/webview/**/*",
        "src/shared/**/*"
    ]
}